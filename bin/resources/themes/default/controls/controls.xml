<?xml version="1.0" encoding="UTF-8"?>
<Window size="800,600" caption="0,0,0,35" sizebox="2,2,2,2" mininfo="400,320" >
    <!-- 整个布局放在一个VBox容器中 -->
    <!-- 布局属性：margin="left,top,right,bottom"; padding="left,top,right,bottom" -->
    <VBox bkcolor="bk_wnd_darkcolor">
        <!-- 标题栏区域 -->
        <HBox width="stretch" height="35" bkcolor="bk_wnd_lightcolor">
            <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8"/>
            <Label text="Controls" valign="center" margin="8"/>
            <Control />
            <Button class="btn_wnd_settings" name="settings" margin="4,6,0,0"/>
            <Button class="btn_wnd_min" name="minbtn" margin="4,6,0,0"/>
            <Box width="21" margin="4,6,0,0">
                <Button class="btn_wnd_max" name="maxbtn"/>
                <Button class="btn_wnd_restore" name="restorebtn" visible="false"/>
            </Box>
            <Button class="btn_wnd_close" name="closebtn" margin="4,6,8,0"/>
        </HBox>
        <!-- 工作区域，除了标题栏外的内容都放在这个大的VBox区域 -->
        <VBox padding="10,10,10,10">
            <!-- 第一排 -->
            <HBox height="110" padding="0,0,0,10">
                <!-- Buttons -->
                <VBox>
                    <Button class="btn_global_blue_80x30" text="blue" tooltiptext="ui::Buttons"/>
                    <Button class="btn_global_white_80x30" text="white"/>
                    <Button class="btn_global_red_80x30" text="red"/>
                </VBox>
                <!-- Checkbox -->
                <VBox>
                    <CheckBox class="checkbox_font12" text="checkbox1" margin="0,5,0,10" selected="true" tooltiptext="ui::Checkbox"/>
                    <CheckBox class="checkbox_font12" text="checkbox2" margin="0,5,0,10"/>
                    <CheckBox class="checkbox_font12" text="checkbox3" margin="0,5,0,10"/>
                </VBox>
                <!-- Option -->
                <VBox>
                    <Option class="circle_option_2" group="option_group" text="option1" margin="0,3,0,10" selected="true" tooltiptext="ui::Option"/>
                    <Option class="circle_option_2" group="option_group" text="option2" margin="0,3,0,10"/>
                    <Option class="circle_option_2" group="option_group" text="option3" margin="0,3,0,10"/>
                </VBox>
                <!-- List -->
                <VListBox class="list" name="list" padding="5,3,5,3" tooltiptext="ui::VListBox">
                </VListBox>
                <!-- TreeView -->
                <TreeView class="list" name="tree" padding="5,3,5,3" margin="20" tooltiptext="ui::TreeView">
                </TreeView>
            </HBox>
            <Control class="splitline_hor_level1"/>
            <!-- 第二排 -->
            <HBox height="154">
                <!-- Combo/RichEdit/FilterCombo/CheckCombo -->
                <VBox width="300" margin="0,0,10">
                    <Combo class="list" name="combo" height="30" margin="0,12,0" padding="6" bkimage="file='../public/combo/normal.png' corner='5,5,30,5'"/>
                    <RichEdit class="simple input" height="30" margin="0,3" padding="6,6,6" promptmode="true" prompttext="ui::RichEdit: Single line text control" promptcolor="lightcolor"/>
                    <FilterCombo name="filter_combo" height="30" margin="0,3" bordersize="1" bordercolor="splitline_level1" tooltiptext="nim_comp::FilterCombo"/>
                    <CheckCombo name="check_combo" height="30" margin="0,3" bordersize="1" bordercolor="splitline_level1" tooltiptext="nim_comp::CheckCombo"/>
                </VBox>
                
                <!-- Progress/Slider/DateTime -->
                <VBox>
                    <HBox margin="0,10" height="32">
                        <Control width="auto" height="auto" bkimage="../public/animation/ani_loading.gif" valign="center"/>
                        <Progress class="progress_blue" name="progress" value="0" margin="10" tooltiptext="ui::Progress"/>
                    </HBox>
                    <HBox margin="0,0,0,10" height="32">
                        <Control width="auto" height="auto" bkimage="set_speaker.png" valign="center"/>
                        <Slider class="slider_green" value="70" margin="10" tooltiptext="ui::Slider"/>
                    </HBox>
                    <!-- DateTime -->
                    <HBox childmargin="10">
                        <Label text="默认的日期格式" margin="0,0,0,8" valign="center" hottextcolor="red" pushedtextcolor="blue"/>
                        <DateTime width="140" height="24" />
                    </HBox>
                    <HBox childmargin="10">
                        <Label text="自定义日期格式" margin="0,0,0,8" valign="center" />
                        <DateTime width="140" height="24" format="%Y/%m/%d %H:%M" />
                    </HBox>
                </VBox>
                
                <!-- CircleProgress -->
                <VBox width="160" margin="10,0">
                    <CircleProgress name="circleprogress" circular="true" height="80" width="80"
                    circlewidth="10" bgcolor="gray" fgcolor="green"  clockwise="true"  min="1" max="100" value="75" margin="10"
                    textpadding="10,32,10,10" normaltextcolor="darkcolor" indicator="logo_18x18.png" tooltiptext="ui::CircleProgress"/>
                </VBox>
            </HBox>
            
            <!-- 分割线 -->
            <Control class="splitline_hor_level1"/>
            <!-- RichEdit -->
            <RichEdit class="prompt" name="edit" bkcolor="bk_wnd_lightcolor" width="stretch" height="stretch"
                        multiline="true" vscrollbar="true" hscrollbar="true" autovscroll="true"
                        normaltextcolor="darkcolor" wantreturnmsg="true" rich="true" loadingimage="file='autumn.png'" loadingbkcolor="red"/>
        </VBox>
    </VBox>
</Window>