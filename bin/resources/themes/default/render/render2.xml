<?xml version="1.0" encoding="UTF-8"?>
<Window size="900,600" caption="0,0,0,35" sizebox="2,2,2,2" text="渲染引擎测试程序">
    <VBox bkcolor="bk_wnd_darkcolor">
        <!-- 标题栏区域 -->
        <HBox width="stretch" height="35" bkcolor="bk_wnd_lightcolor">
            <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8"/>
            <Label text="渲染引擎测试程序" valign="center" margin="8"/>
            <Control />
            <Button class="btn_wnd_min" name="minbtn" margin="4,6,0,0"/>
            <Box width="21" margin="4,6,0,0">
                <Button class="btn_wnd_max" name="maxbtn"/>
                <Button class="btn_wnd_restore" name="restorebtn" visible="false"/>
            </Box>
            <Button class="btn_wnd_close" name="closebtn" margin="4,6,8,0"/>
        </HBox>
        <!-- 标准控件: 测试所有支持的文件格式 -->
        <HBox width="stretch" height="200">
            <Control width="120" height="auto" bkimage="bmp_test_24.bmp" valign="center" margin="8"/>
            <Control width="120" height="auto" bkimage="jpg_test.jpg" valign="center" margin="8"/>
            <Control width="auto" height="auto" bkimage="icon_test.ico" valign="center" margin="8"/>
            <Control width="120" height="auto" bkimage="gif_test.gif" valign="center" margin="8"/>
            <Control width="120" height="auto" bkimage="autumn.png" valign="center" margin="8"/>
            <Control width="120" height="auto" bkimage="apng_test.png" valign="center" margin="8"/>
            <Control width="120" height="auto" bkimage="apng_test2.png" valign="center" margin="8"/>
            <Control width="auto" height="auto" bkimage="file='svg_test.svg' width='300%'" valign="center" margin="8"/>
        </HBox>
        <!-- 工作区域，创建一个渲染引擎测试控件（自定义控件） -->
        <Box>
            <RenderTest />
        </Box>
    </VBox>
</Window>