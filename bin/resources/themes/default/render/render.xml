<?xml version="1.0" encoding="UTF-8"?>
<Window size="900,600" sizebox="4,4,4,4" caption="0,0,0,36" text="渲染引擎测试程序">
    <!-- 整个窗口中，所有控件都放在这个VBox容器中 -->  
    <VBox bkcolor="bk_wnd_darkcolor">
        <!-- 标题栏区域 -->  
        <HBox width="stretch" height="36" bkcolor="bk_wnd_lightcolor">
            <!-- 标题栏：窗口左上角显示区域 -->  
            <HBox margin="0,0,30,0" valign="center" width="auto" height="auto">
                <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8,0,0,0"/>
                <Label text="渲染引擎测试程序" valign="center" margin="8,0,0,0"/>
            </HBox>
            <Control />
            <!-- 标题栏：中间按钮区域 -->
            <HBox margin="0,0,30,0" valign="center" width="auto" height="auto">        
                <Button class="btn_global_blue_80x30" width="48" height="32" text="页面1" margin="8,0,0,0" tooltiptext="页面1">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selectedid=&quot;0&quot;" />
                </Button>
                <Button class="btn_global_blue_80x30" width="48" height="32" text="页面2" margin="8,0,0,0" tooltiptext="页面2">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selectedid=&quot;1&quot;" />
                </Button>
                <Button class="btn_global_blue_80x30" width="48" height="32" text="页面3" margin="8,0,0,0" tooltiptext="页面3">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selectedid=&quot;2&quot;" />
                </Button>
             </HBox>
            <Control />
            <!-- 标题栏：右侧窗口控制区域，窗口最小化、最大化、还原、关闭按钮 -->
            <HBox margin="0,0,0,0" valign="center" width="auto" height="auto">
                <Button class="btn_wnd_min" name="minbtn" margin="4,0,0,0" tooltiptext="最小化" />
                <Box width="22" margin="4,0,0,0">
                    <Button class="btn_wnd_max" name="maxbtn" tooltiptext="最大化"/>
                    <Button class="btn_wnd_restore" name="restorebtn" tooltiptext="还原" visible="false"/>
                </Box>
                <Button class="btn_wnd_close" name="closebtn" margin="4,0,8,0" tooltiptext="关闭" />
            </HBox>
        </HBox> <!-- 标题栏区域结束 --> 
        
        <!-- 显示区域 --> 
        <VBox>            
            <TabBox name="main_view_tab" bkcolor="white" fadeswitch="true">
                <VBox name="main_view_page_01">
                    <Label text="页面1："/>
                    <RenderTest1 />
                </VBox>
                <VBox name="main_view_page_02">
                    <Label text="页面2："/>                    
                    <!-- 标准控件: 测试所有支持的文件格式 -->
                    <HBox width="auto" height="auto">
                        <Control width="auto" height="auto" bkimage="file='bmp_test_24.bmp' width='150'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='jpg_test.jpg' width='150'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='icon_test.ico' width='150' iconsize='256'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='autumn.png' width='150'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='svg_test.svg' width='400%'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='gif_test2.gif' width='150'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='webp_test2.webp' width='150'" valign="center" margin="8"/>
                    </HBox>
                    <HBox width="auto" height="auto">           
                        <Control width="auto" height="auto" bkimage="file='gif_test.gif' width='40%'" valign="center" margin="8"/>            
                        <Control width="auto" height="auto" bkimage="file='apng_test.png' width='50%'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='apng_test2.png' width='50%'" valign="center" margin="8"/>
                        <Control width="auto" height="auto" bkimage="file='webp_test.webp' width='40%'" valign="center" margin="8"/>
                    </HBox>
                    <RenderTest2 />
                </VBox>
                <VBox name="main_view_page_03">
                    <Label text="页面3："/>
                    <RenderTest3 />
                </VBox>
            </TabBox>
        </VBox>
    </VBox>
</Window>
