<?xml version="1.0" encoding="UTF-8"?>
<Window size="90%,90%" sizebox="4,4,4,4" caption="0,0,0,36" text="渲染引擎测试程序">
    <!-- 整个窗口中，所有控件都放在这个VBox容器中 -->  
    <VBox bkcolor="bk_wnd_darkcolor">
        <!-- 标题栏区域 -->  
        <HBox width="stretch" height="36" bkcolor="bk_wnd_lightcolor">
            <!-- 标题栏：窗口左上角显示区域 -->  
            <HBox margin="0,0,30,0" valign="center" width="auto" height="auto">
                <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8,0,0,0"/>
                <Label text="渲染引擎测试" valign="center" margin="8,0,0,0"/>
            </HBox>
            <Control />
            <!-- 标题栏：中间按钮区域 -->
            <HBox margin="0,0,30,0" valign="center" width="auto" height="auto">
                <Button class="btn_global_blue_80x30" width="20" height="32" text="1" margin="8,0,0,0" tooltiptext="页面1" borderround="2,2">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={0}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="20" height="32" text="2" margin="8,0,0,0" tooltiptext="页面2">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={1}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="20" height="32" text="3" margin="8,0,0,0" tooltiptext="页面3" borderround="2,2">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={2}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="20" height="32" text="4" margin="8,0,0,0" tooltiptext="页面4">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={3}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="36" height="32" text="文字" margin="8,0,0,0" tooltiptext="文字绘制" borderround="2,2">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={4}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="20" height="32" text="6" margin="8,0,0,0" tooltiptext="页面6">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={5}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="32" height="32" text="Box" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={6}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="40" height="32" text="HBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={7}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="40" height="32" text="VBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={8}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="54" height="32" text="TileBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={9}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="54" height="32" text="ScrollBox" tooltip_text="ScrollBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={10}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="54" height="32" text="HScrollBox" tooltip_text="HScrollBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={11}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="54" height="32" text="VScrollBox" tooltip_text="VScrollBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={12}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="54" height="32" text="TileScrollBox" tooltip_text="TileScrollBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={13}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="54" height="32" text="ListBox" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={14}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="50" height="32" text="Layout" margin="8,0,0,0">
                    <Event type="buttonup" receiver="main_view_tab" applyattribute="selected_id={15}" />
                </Button>
            </HBox>
            <Control />
            <!-- 标题栏：右侧窗口控制区域，窗口最小化、最大化、还原、关闭按钮 -->
            <HBox margin="0,0,0,0" valign="center" width="auto" height="36">
                <Button class="btn_wnd_min_11" height="32" width="40" name="minbtn" margin="0,2,0,2" tooltip_text="最小化"/>
                <Box height="stretch" width="40" margin="0,2,0,2">
                    <Button class="btn_wnd_max_11" height="32" width="stretch" name="maxbtn" tooltip_text="最大化"/>
                    <Button class="btn_wnd_restore_11" height="32" width="stretch" name="restorebtn" visible="false" tooltip_text="还原"/>
                </Box>
                <Button class="btn_wnd_close_11" height="stretch" width="40" name="closebtn" margin="0,0,0,2" tooltip_text="关闭"/>
            </HBox>
        </HBox> <!-- 标题栏区域结束 --> 
        
        <!-- 显示区域 --> 
        <VBox>            
            <TabBox name="main_view_tab" bkcolor="white" fadeswitch="true" selected_id="15">
                <VBox name="main_view_page_01">
                    <Label text="页面1：IRender接口的图片绘制相关接口测试（DrawImage，BitBlt，StretchBlt，AlphaBlend）"/>
                    <RenderTest1 />
                </VBox>
                <VBox name="main_view_page_02">
                    <Label text="页面2："/>
                    <RenderTest2 />
                </VBox>
                <VBox name="main_view_page_03">
                    <Label text="页面3：IRender接口的画线、画矩形、填充矩形等基本图形绘制测试"/>
                    <RenderTest3 />
                </VBox>
                <VBox name="main_view_page_04">
                    <Label text="页面4：用标准控件测试所有支持的文件格式"/>                    
                    <!-- 标准控件: 测试所有支持的文件格式 -->
                    <Include src="page_04.xml"/>
                </VBox>
                <VBox name="main_view_page_05">
                    <Label text="页面5：文字绘制测试"/>
                    <Include src="page_05.xml"/>
                </VBox>
                <VBox name="main_view_page_06">
                    <Label text="页面6：DrawBoxShadow测试"/>
                    <Control margin="50,50" width="300" height="100" borderround="12,12" boxshadow="color='red' offset='0,0' blurradius='8' spreadradius='8'"/>
                    <Control margin="50,50" width="300" height="100" borderround="0,0" bordercolor="blue" bordersize="1,1,1,1" bkcolor="green" boxshadow="color='red' offset='3,3' blurradius='2' spreadradius='2'"/>
                </VBox>
                <VBox name="main_view_page_07">
                    <Include src="page_box.xml"/>
                </VBox>
                <VBox name="main_view_page_08">
                    <Include src="page_hbox.xml"/>
                </VBox>
                <VBox name="main_view_page_09">
                    <Include src="page_vbox.xml"/>
                </VBox>
                <VBox name="main_view_page_10">
                    <Include src="page_tilebox.xml"/>
                </VBox>
                <VBox name="main_view_page_11">
                    <Include src="page_scroll_box.xml"/>
                </VBox>
                <VBox name="main_view_page_12">           
                    <Include src="page_hscroll_box.xml"/>
                </VBox>
                <VBox name="main_view_page_13">
                    <Include src="page_vscroll_box.xml"/>
                </VBox>
                <VBox name="main_view_page_14">
                    <Include src="page_tile_scroll_box.xml"/>
                </VBox>
                <VBox name="main_view_page_15">
                    <Include src="page_list_box.xml"/>
                </VBox>
                <VBox name="main_view_page_16">
                    <Include src="page_layout.xml"/>
                </VBox>
            </TabBox>
        </VBox>
    </VBox>
</Window>
