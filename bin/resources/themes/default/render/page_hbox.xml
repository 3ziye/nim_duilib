<?xml version="1.0" encoding="UTF-8"?>
<Window>
    <Label text="布局HBox测试"/>
    <HBox bkcolor="gray" border_size="1" border_color="red" padding="8,8,8,8">
        <Control width="stretch" height="stretch" border_size="1" border_color="green" bkcolor="Cornsilk"/>
        <Label text="float minwidth/minheight: 300*300" float="true" text_align="top" width="200" height="100" minwidth="300" minheight="300" margin="64,160,6,6" border_size="1" border_color="green" bkcolor="Olive"/>
        <Label text="float maxwidth/maxheight: 80*80" float="true" single_line="false" width="200" height="100" maxwidth="80" maxheight="80" margin="600,160,6,6" border_size="1" border_color="green" bkcolor="LemonChiffon"/>
        <Label text="left,top" halign="left" valign="top" margin="6,6,6,6" width="120" height="80" maxwidth="60" maxheight="60" bkcolor="Sienna"/>
        <Label text="left,center" halign="left" valign="center" margin="6,6,6,6" width="120" height="80" bkcolor="Sienna"/>
        <Label text="left,bottom" halign="left" valign="bottom" margin="6,6,6,6" width="120" height="80" bkcolor="Sienna"/>
        <Label text="center,top" halign="center" valign="top" margin="6,6,6,6" width="120" height="80" bkcolor="Sienna"/>
        <Label text="center,center" halign="center" valign="center" margin="6,6,6,6" width="120" height="80" minwidth="150" minheight="150" bkcolor="Sienna"/>
        <Label text="center,bottom" halign="center" valign="bottom" margin="6,6,6,6" width="120" height="80" bkcolor="Sienna"/>
        <Label text="right,top" halign="right" valign="top" margin="6,6,6,6" width="120" height="80" bkcolor="Sienna"/>
        <Label text="right,center" halign="right" valign="center" margin="6,6,6,6" width="120" height="80" bkcolor="Sienna"/>
        <Label text="right,bottom" halign="right" valign="bottom" margin="6,6,6,6" width="120" height="80" bkcolor="Sienna"/>
    </HBox>
</Window>
