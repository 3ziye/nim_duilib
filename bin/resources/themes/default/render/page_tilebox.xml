<?xml version="1.0" encoding="UTF-8"?>
<Window>
    <Class name="page_tile_box" halign="center" valign="center" bkcolor="Sienna" border_size="1" border_color="Yellow"/>
    <Label text="布局TileBox测试"/>
    <TileBox columns="2" width="auto" height="auto" padding="1,1,1,1" bkcolor="gray" border_size="1" border_color="red">
        <Control class="page_tile_box" width="50" height="12"/>

        <Label text="float minwidth/minheight: 300*300" float="true" text_align="top" width="200" height="100" minwidth="300" minheight="300" margin="64,160,6,6" border_size="1" border_color="green" bkcolor="Olive"/>
        <Label text="float maxwidth/maxheight: 80*80" float="true" single_line="false" width="200" height="100" maxwidth="80" maxheight="80" margin="600,160,6,6" border_size="1" border_color="green" bkcolor="LemonChiffon"/>

        <Label class="page_tile_box" text="left,top" halign="left" valign="top" width="100" height="80" maxwidth="60" maxheight="20"/>
        <Label class="page_tile_box" text="left,center" halign="left" valign="center" width="100" height="80"/>
        <Label class="page_tile_box" text="left,bottom" halign="left" valign="bottom" width="1800" height="80"/>
        <Label class="page_tile_box" text="center,top" halign="center" valign="top" width="100" height="80"/>
        <Label class="page_tile_box" text="center,center" halign="center" valign="center" width="100" height="80"/>
        <Label class="page_tile_box" text="center,bottom" halign="center" valign="bottom" width="100" height="80"/>
        <Label class="page_tile_box" text="right,top" halign="right" valign="top" width="100" height="80"/>
        <Label class="page_tile_box" text="right,center" halign="right" valign="center" width="100" height="80"/>
        <Label class="page_tile_box" text="right,bottom" halign="right" valign="bottom" width="100" height="80"/>
    </TileBox>
</Window>
