<Window size="80%,80%" sizebox="4,4,4,4" caption="0,0,0,36" text="TreeView控件测试程序">
    <!-- 该窗口下的Class定义 --> 
    <Class name="tree_view_item" height="20" hotcolor="bk_listitem_hovered" pushedcolor="bk_listitem_selected" selectednormalcolor="bk_listitem_selected" fadehot="false"/>
    <Class name="tree_view_item_checkbox" normalimage="file='../public/CheckBox/check_no.png' padding='2,0,0,0' valign='center'" disabledimage="file='../public/CheckBox/check_no.png' padding='2,0,0,0' valign='center' fade='80'" selectednormalimage="file='../public/CheckBox/check_yes.png' padding='2,0,0,0' valign='center'" selecteddisabledimage="file='../public/CheckBox/check_yes.png' padding='2,0,0,0' valign='center' fade='80'"/>
    <!-- 整个窗口中，所有控件都放在这个VBox容器中 -->  
    <VBox bkcolor="bk_wnd_darkcolor">
        <!-- 标题栏区域 -->  
        <HBox width="stretch" height="36" bkcolor="bk_wnd_lightcolor">
            <!-- 标题栏：窗口左上角显示区域 -->  
            <HBox margin="0,0,30,0" valign="center" width="auto" height="auto">
                <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8,0,0,0"/>
                <Label text="TreeView控件测试程序" valign="center" margin="8,0,0,0"/>
            </HBox>
            <Control />
            <!-- 标题栏：右侧窗口控制区域，窗口最小化、最大化、还原、关闭按钮 -->
            <HBox margin="0,0,0,0" valign="center" width="auto" height="auto">
                <Button class="btn_wnd_min" name="minbtn" margin="4,0,0,0" tooltiptext="最小化" />
                <Box width="22" margin="4,0,0,0">
                    <Button class="btn_wnd_max" name="maxbtn" tooltiptext="最大化"/>
                    <Button class="btn_wnd_restore" name="restorebtn" tooltiptext="还原" visible="false"/>
                </Box>
                <Button class="btn_wnd_close" name="closebtn" margin="4,0,8,0" tooltiptext="关闭" />
            </HBox>
        </HBox> <!-- 标题栏区域结束 --> 
        
        <!-- 显示区域 --> 
        <VBox>            
            <HBox height="36" bkcolor="gray" border_size="1,1,1,0" border_color="blue">
                <Label text="功能控制：" valign="center" margin="12,0,10,0"/>
                <Button class="btn_global_blue_80x30" width="auto" height="32" text="显示CheckBox" padding="18,0,18,0" margin="8,0,0,0" borderround="2,2" valign="center">
                    <Event type="buttonup" receiver="tree" applyattribute="check_box_class={tree_view_item_checkbox}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="auto" height="32" text="隐藏CheckBox" margin="8,0,0,0" borderround="2,2" valign="center">
                    <Event type="buttonup" receiver="tree" applyattribute="check_box_class={}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="auto" height="32" text="显示图标" margin="8,0,0,0" borderround="2,2" valign="center">
                    <Event type="buttonup" receiver="tree" applyattribute="show_icon={true}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="auto" height="32" text="隐藏图标" margin="8,0,0,0" borderround="2,2" valign="center">
                    <Event type="buttonup" receiver="tree" applyattribute="show_icon={false}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="auto" height="32" text="单项选择" margin="8,0,0,0" borderround="2,2" valign="center">
                    <Event type="buttonup" receiver="tree" applyattribute="multi_select={false}" />
                </Button>
                <Button class="btn_global_blue_80x30" width="auto" height="32" text="多项选择" margin="8,0,0,0" borderround="2,2" valign="center">
                    <Event type="buttonup" receiver="tree" applyattribute="multi_select={true}" />
                </Button>
            </HBox>
            <HBox>
                <HBox width="300" bkcolor="SeaShell" border_size="1,1,0,1" border_color="blue">
                    <TreeView class="list" name="tree" padding="5,3,5,3" indent="20"/>
                </HBox>
                <HBox bkcolor="Pink" border_size="1" border_color="blue">
                    <VirtualVTileListBox class="list" name="list" columns="auto" itemsize="240,60" multi_select="false" vscrollbar="true" hscrollbar="true" bordersize="1" bordercolor="splitline_level2" padding="1,1,1,1"/>
                </HBox>
            </HBox>
        </VBox>
    </VBox>
</Window>
