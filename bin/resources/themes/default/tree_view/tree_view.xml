<Window size="80%,80%" sizebox="4,4,4,4" caption="0,0,0,36" text="TreeView控件测试程序">
    <!-- 整个窗口中，所有控件都放在这个VBox容器中 -->  
    <VBox bkcolor="bk_wnd_darkcolor">
        <!-- 标题栏区域 -->  
        <HBox width="stretch" height="36" bkcolor="bk_wnd_lightcolor">
            <!-- 标题栏：窗口左上角显示区域 -->  
            <HBox margin="0,0,30,0" valign="center" width="auto" height="auto">
                <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8,0,0,0"/>
                <Label text="TreeView控件测试程序" valign="center" margin="8,0,0,0"/>
            </HBox>
            <Control />
            <!-- 标题栏：右侧窗口控制区域，窗口最小化、最大化、还原、关闭按钮 -->
            <HBox margin="0,0,0,0" valign="center" width="auto" height="auto">
                <Button class="btn_wnd_min" name="minbtn" margin="4,0,0,0" tooltiptext="最小化" />
                <Box width="22" margin="4,0,0,0">
                    <Button class="btn_wnd_max" name="maxbtn" tooltiptext="最大化"/>
                    <Button class="btn_wnd_restore" name="restorebtn" tooltiptext="还原" visible="false"/>
                </Box>
                <Button class="btn_wnd_close" name="closebtn" margin="4,0,8,0" tooltiptext="关闭" />
            </HBox>
        </HBox> <!-- 标题栏区域结束 --> 
        
        <!-- 显示区域 --> 
        <VBox>            
            <HBox height="48" bkcolor="LimeGreen" border_size="1,1,1,0" border_color="blue">
                <Control />
            </HBox>
            <HBox>
                <HBox width="300" bkcolor="SeaShell" border_size="1,1,0,1" border_color="blue">
                    <TreeView class="list" name="tree" padding="5,3,5,3" indent="20"/>
                </HBox>
                <HBox bkcolor="Pink" border_size="1" border_color="blue">
                    <VirtualVTileListBox class="list" name="list" columns="auto" itemsize="240,60" multi_select="false" vscrollbar="true" hscrollbar="true" bordersize="1" bordercolor="splitline_level2" padding="1,1,1,1"/>
                </HBox>
            </HBox>
        </VBox>
    </VBox>
</Window>
