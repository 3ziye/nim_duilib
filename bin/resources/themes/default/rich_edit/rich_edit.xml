<Window size="80%,80%" sizebox="4,4,4,4" caption="0,0,0,36" text="TreeView控件测试程序">
    <!-- 该窗口下的Class定义 --> 
    
    <!-- 整个窗口中，所有控件都放在这个VBox容器中 -->  
    <VBox bkcolor="bk_wnd_darkcolor">
        <!-- 标题栏区域 -->  
        <HBox width="stretch" height="36" bkcolor="bk_wnd_lightcolor">
            <!-- 标题栏：窗口左上角显示区域 -->  
            <HBox margin="0,0,30,0" valign="center" width="auto" height="auto">
                <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8,0,0,0"/>
                <Label text="RichEdit控件测试程序" valign="center" margin="8,0,0,0"/>
            </HBox>
            <Control />
            <!-- 标题栏：右侧窗口控制区域，窗口最小化、最大化、还原、关闭按钮 -->
            <HBox margin="0,0,0,0" valign="center" width="auto" height="auto">
                <Button class="btn_wnd_min" name="minbtn" margin="4,0,0,0" tooltiptext="最小化" />
                <Box width="22" margin="4,0,0,0">
                    <Button class="btn_wnd_max" name="maxbtn" tooltiptext="最大化"/>
                    <Button class="btn_wnd_restore" name="restorebtn" tooltiptext="还原" visible="false"/>
                </Box>
                <Button class="btn_wnd_close" name="closebtn" margin="4,0,8,0" tooltiptext="关闭" />
            </HBox>
        </HBox> <!-- 标题栏区域结束 --> 
        
        <!-- 显示区域 --> 
        <HBox>
            <!-- 左侧区域 -->
            <VBox width="500" minwidth="60" bkcolor="SeaShell" border_size="1,1,0,1" border_color="blue">
                <GroupBox margin="6,6,6,6" text="测试GroupBox" corner_size="4,4">
                    
                </GroupBox>
                <HBox height="36">
                    <Label text="RichEdit,simple:  " valign="center"/>
                    <RichEdit class="simple" text="RichEdit: simple" valign="center" text_align="vcenter" bkcolor="white" margin="4,6,4,4"/>
                </HBox>
                <HBox height="36">
                    <Label text="RichEdit,readonly:  " valign="center"/>
                    <RichEdit class="simple" text="RichEdit: readonly" readonly="true" valign="center" text_align="vcenter" bkcolor="white" margin="4,6,4,4"/>
                </HBox>
                <HBox height="36">
                    <Label text="RichEdit,password:  " valign="center"/>
                    <RichEdit class="simple" text="This is password!" password="true" password_char="#" flash_password_char="true" show_password="false" valign="center" text_align="vcenter" bkcolor="white" margin="4,6,4,4"/>
                </HBox>
                <HBox height="36">
                    <Label text="RichEdit,number:  " valign="center"/>
                    <RichEdit class="simple" text="0123456789" number="true" valign="center" text_align="vcenter" bkcolor="white" margin="4,6,4,4"/>
                </HBox>
                <Control class="splitline_hor_level1"/>
                <HBox height="36">
                    <Label text="RichEdit,prompt:  " valign="center"/>
                    <RichEdit class="prompt simple" prompttext="RichEdit: Single line text control" valign="center" text_align="vcenter" bkcolor="white" margin="4,6,4,4"/>
                </HBox>
                <Control class="splitline_hor_level1"/>
                <HBox height="64">
                    <Label text="RichEdit,edit:  " valign="center"/>
                    <RichEdit class="edit" text="RichEdit: edit" text_align="right,bottom" multi_line="true" valign="center" text_padding="4,4,4,4" margin="4,6,4,4"/>
                </HBox>
                <Control class="splitline_hor_level1"/>
                <HBox height="64">
                    <Label text="RichEdit,input: disabled " valign="center"/>
                    <RichEdit class="input" enabled="false" text="RichEdit: input" valign="center" text_padding="4,4,0,0"/>
                </HBox>
                <HBox height="36">
                    <Label text="RichEdit:  " valign="center"/>
                    <RichEdit name="test_url" auto_detect_url="true" text="超级链接：http://www.baidu.com" valign="center" text_align="vcenter" text_padding="2,0,0,0" bkcolor="white" margin="4,6,4,4"/>
                </HBox>
            </VBox>
            <!-- 纵向分割条，用于调整左右区域大小 -->
            <Split bkcolor="splitline_level1" width="2"/>
            <!-- 右侧区域 -->
            <VBox>
                <HBox minheight="18" bkcolor="gray" height="auto">
                    <Label text="功能控制：" valign="center" margin="12,0,10,0"/>
                    <Option class="btn_global_blue_80x30" group="expand" selected="true" width="auto" height="32" text="显示展开标志" padding="18,0,18,0" margin="8,0,0,0" borderround="2,2" valign="center">
                        <Event type="buttonup" receiver="tree" applyattribute="expand_image_class={tree_view_item_expand}" />
                    </Option>
                    <Option class="btn_global_blue_80x30" group="expand" selected="false" width="auto" height="32" text="隐藏展开标志" margin="8,0,0,0" borderround="2,2" valign="center">
                        <Event type="buttonup" receiver="tree" applyattribute="expand_image_class={}" />
                    </Option>
                </HBox>
                <!-- 横向分割条，用于调整上下区域大小 -->
                <Split bkcolor="splitline_level1" height="2"/>
                <HBox bkcolor="Pink" border_size="1" border_color="blue" minwidth="60">                
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</Window>
